{% extends 'base.html.twig' %}

{% block title %}Reservation index{% endblock %}

{% block body %}
<div class="container">

    <h1>Reservation index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id reservation</th>
                <th>Id voiture</th>
                <th>PrixTT</th>
                <th>Date_deb</th>
                <th>Date_fin</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reservation in reservations %}
            <tr>
                <td>{{ reservation.id }}</td>
                <td>{{ reservation.voiture.id }}</td>
                <td>{{ reservation.prixTT }}â‚¬</td>
                <td>{{ reservation.dateDeb ? reservation.dateDeb|date('Y-m-d') : '' }}</td>
                <td>{{ reservation.dateFin ? reservation.dateFin|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('app_reservation_show', {'id': reservation.id}) }}" class="btn btn-success">Voir</a>
                    <a href="{{ path('app_reservation_edit', {'id': reservation.id}) }}" class="btn btn-warning">Modifier</a>
                        {{ include('reservation/_delete_form.html.twig') }}

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    
    {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('app_reservation_new') }}">Create new</a>

    {% endif %}
    </div>
{% endblock %}
