{% extends 'base.html.twig' %}

{% block title %}Reservation{% endblock %}

{% block body %}
<div class="container">
    <h1> Mes réservations :</h1>
    
    {# {{dump(reservations)}} #}
    <table class="table">
        <tbody>
            <tr>
                <th>Voiture Id</th>
                <th>PrixTT</th>
                <th>Date_deb</th>
                <th>Date_fin</th>
                <th>Actions</th>

            </tr>
            {% for reservation in reservations %}
                <tr>
                    <td>{{ reservation.id}}</td> 
                    <td>{{ reservation.prixTT }}€</td>
                    <td>{{ reservation.dateDeb ? reservation.dateDeb|date('d-m-Y') : '' }}</td>
                    <td>{{ reservation.dateFin ? reservation.dateFin|date('d-m-Y') : '' }}</td>
                    <td>
                        <a href="{{ path('app_reservation_edit', {'id': reservation.id}) }}" class="btn btn-danger">edit</a>
                        {{ include('reservation/_delete_form.html.twig') }}
                    </td>
                </tr>
            {% endfor %}
            
        </tbody>
    </table>
 
    <a href="{{ path('app_reservation_index') }}">back to list</a>

    </div>
{% endblock %}
