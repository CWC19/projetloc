{% extends 'base.html.twig' %}

{% block title %}Type index{% endblock %}

{% block body %}
<div class="container">

    <h1>Type liste</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Marque</th>
                <th>Model</th>
                <th>Puissance</th>
                <th>Carburant</th>
                <th>Boite_vitesse</th>
                <th>Categorie</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for type in types %}
            <tr>
                <td>{{ type.id }}</td>
                <td>{{ type.marque }}</td>
                <td>{{ type.model }}</td>
                <td>{{ type.puissance }}</td>
                <td>{{ type.carburant }}</td>
                <td>{{ type.boiteVitesse }}</td>
                <td>{{ type.categorie }}</td>
                <td>
                    <a href="{{ path('app_type_show', {'id': type.id}) }}"class="btn btn-success">Voir</a>
                    <a href="{{ path('app_type_edit', {'id': type.id}) }}"class="btn btn-warning">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">Aucun type</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_type_new') }}" class="btn btn-info">Ajouter un type</a>
    </div>
{% endblock %}
