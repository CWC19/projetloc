{% extends 'base.html.twig' %}

{% block title %}Type index{% endblock %}

{% block body %}
    <h1>Type index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Marque</th>
                <th>Model</th>
                <th>Puissance</th>
                <th>Carburant</th>
                <th>Boite_vitesse</th>
                <th>Categorie</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for type in types %}
            <tr>
                <td>{{ type.id }}</td>
                <td>{{ type.marque }}</td>
                <td>{{ type.model }}</td>
                <td>{{ type.puissance }}</td>
                <td>{{ type.carburant }}</td>
                <td>{{ type.boiteVitesse }}</td>
                <td>{{ type.categorie }}</td>
                <td>
                    <a href="{{ path('app_type_show', {'id': type.id}) }}">show</a>
                    <a href="{{ path('app_type_edit', {'id': type.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_type_new') }}">Create new</a>
{% endblock %}
